ObjectEngine objectEngine = com.quinsoft.epamms.ZeidonObjectEngineConfiguration.getObjectEngine();

public int DoInputMapping( HttpServletRequest request,
                           HttpSession session,
                           ServletContext application,
                           boolean webMapping )
{
   String taskId = (String) session.getAttribute( "ZeidonTaskId" );
   Task task = objectEngine.getTaskById( taskId );

   View sHelp = null;
   String strMapValue = "";
   int    nRC = 0;
   int    nMapError = 1;

   if ( webMapping == false )
      session.setAttribute( "ZeidonError", null );

   sHelp = task.getViewByName( "sHelp" );
   if ( VmlOperation.isValid( sHelp ) )
   {
      // EditBox: HelpMsg
      nRC = sHelp.cursor( "Help" ).checkExistenceOfEntity( ).toInt();
      if ( nRC >= 0 ) // CursorResult.SET
      {
         strMapValue = request.getParameter( "HelpMsg" );
         try
         {
            if ( webMapping )
               VmlOperation.CreateMessage( task, "HelpMsg", "", strMapValue );
            else
               sHelp.cursor( "Help" ).getAttribute( "Message" ).setValue( strMapValue, "" );
         }
         catch ( InvalidAttributeValueException e )
         {
            nMapError = -16;
            VmlOperation.CreateMessage( task, "HelpMsg", e.getReason( ), strMapValue );
         }
      }
   }

   if ( webMapping == true )
      return 2;

   if ( nMapError < 0 )
      session.setAttribute( "ZeidonError", "Y" );

   return nMapError;
}

